<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/include_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/padding_10"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="瑜伽5次卡"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:text="￥50"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />
    </RelativeLayout>

    <View style="@style/verticalLine" android:background="@color/lighter_grey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/padding_10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="数量"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/reduce"
                android:layout_width="@dimen/width_30"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_login"
                android:gravity="center"
                android:text="-"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number"
                android:layout_width="@dimen/width_30"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/reduce"
                android:background="@drawable/shape_login"
                android:gravity="center"
                android:text="1"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/add"
                android:layout_width="@dimen/width_30"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_toRightOf="@id/number"
                android:background="@drawable/shape_login_yellow"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/light_yellow"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <View style="@style/verticalLine" android:background="@color/lighter_grey" />
    <RelativeLayout
        android:padding="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="合计"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/count_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:text="￥50"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />
    </RelativeLayout>

    <View style="@style/verticalLine"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
android:background="@color/lighter_grey"
        android:layout_height="@dimen/height_10"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/padding_10"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="手机号码"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:text="15154645565"
            android:drawableRight="@drawable/right_arrow"
            android:drawablePadding="@dimen/margin_10"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />
    </RelativeLayout>
    <Button
        android:layout_marginTop="@dimen/margin_50"
        android:id="@+id/login_coach"
        style="@style/LoginButton"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_width="match_parent"
        android:text="@string/submit_order"
        android:layout_height="wrap_content" />
</LinearLayout>
