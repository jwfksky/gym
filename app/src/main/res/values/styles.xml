<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimaryDark">#3A5FCD</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="ProgressBarBig">
        <item name="android:indeterminateDrawable">@drawable/progress_big</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
    </style>
    <style name="LoginWidget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_50</item>
        <item name="android:layout_marginRight">@dimen/margin_50</item>
        <item name="android:alpha">0.8</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="LoginButton">
        <item name="android:height">@dimen/height_50</item>
        <item name="android:background">@drawable/line</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>
    <style name="radioButton_menu">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/bg_page</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:singleLine">true</item>


    </style>

<style name="textDefault">
    <item name="android:gravity">center</item>
    <item name="android:textSize">@dimen/text_16</item>
</style>
</resources>
